@using Crud.web.ViewModels;
@model LoginViewModel;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<head>
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Account.css" asp-append-version="true">
</head>

<body>
    <div class="wrapper">
        <div class="login_box">
            <div class="login-header">
                <span>LOGIN</span>

                <div class="icon-wrapper">
                    <a asp-controller="Home" asp-action="Index">
                        <i class="fa-regular fa-circle-left fa-2x"></i>
                    </a>
                </div>
            </div>

            <form class="shadow w-450 p-3" method="post"  asp-action="Login">

                <div asp-validation-summary ="ModelOnly" class="text-danger"></div>

                <div class="input_box">
                    <input type="text"
                    id="Email"
                    class="input-field"
                    asp-for="Email"
                    required>
                    <label asp-for="Email" class="label">Email Address</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="pass_field">
                    <input type="password"
                    id="Password"
                    class="input-field"
                    asp-for="Password"
                    required>
                    <label asp-for="Password" class="label">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="float-end">
                    <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none" style="color:darkred">
                        Forgot Password?
                    </a>

                </div>

                <div class="form-check mb-3">
                    <label class="form-check-label" style="color: black;">
                        <input asp-for="RememberMe" class="form-check-input"/>
                        @Html.DisplayNameFor(a => a.RememberMe)
                    </label>
                </div>

                <div class="input_box">
                    <input type="submit"
                    class="input-submit"
                    value="Login">
                </div>


                <div class="register">
                    <span>Don't have an account? <a asp-controller="Account" asp-action="Register">Sign Up</a></span>
                </div>
            </form>
        </div>
    </div>

    @section Scripts{
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
        }

    }
</body>

@model Crud.web.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Footer.css" asp-append-version="true" />
</head>

<body>
    <section class="container mt-5 text-center">
        <div class="mt-4">
            <img src="@Model.ProfilePicture" class="rounded-circle img-fluid" width="300" onclick="window.open('@Model.ProfilePicture', '_blank')">
        </div> <br>
        
        <h3>Name: <span style="font-size: 1.0em; font-weight: bold;">@Model.FullName</span></h3>
        <h3>Email: <span style="font-size: 1.0em; font-weight: bold;">@Model.Email</span></h3>


        <div class="mt-4">
            <a asp-action="EditProfile" asp-controller="Account" class="btn btn-primary">
                <i class="fa-solid fa-pen-to-square me-2"></i>Edit Profile
            </a>
        </div>
    </section>
</body>




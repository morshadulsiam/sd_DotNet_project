@{
    ViewData["Title"] = "Adopted Pets";
}

@model List<Crud.web.Models.PetViewModel>

<div class="text-center">
    <h1 class="display-4">Adopted Pets</h1>
    <p>These pets have found a new home!</p>
</div>

<div class="container">
    <div class="row">
        @foreach (var pet in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3 border-success">
                    <img src="@pet.ImagePath" class="card-img-top" alt="Pet Image" style="height: 300px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@pet.PetCatagory</h5>
                        <p class="card-text"><strong>Age:</strong> @pet.PetAge</p>
                        <p class="card-text"><strong>Description:</strong> @pet.Description</p>
                        <p class="card-text text-success"><strong>Status:</strong> Adopted</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

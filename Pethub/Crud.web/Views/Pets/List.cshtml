@model List<Crud.web.Models.Entities.Pet>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Adoption Details</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Sstyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-md-12 mt-4">

                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div class="title">
                                <B>Adoption Details</B>
                            </div>

                            <div class="icon-wrapper">
                                <a asp-controller="Home" asp-action="Index">
                                    <i class="fa-regular fa-circle-left fa-2x"></i>
                                </a>
                            </div>
                        </div>

                        <div class="card-body">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">Pet Category</th>
                                        <th scope="col">Pet Age</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Phone</th>
                                        <th scope="col">Picture</th>
                                        <th scope="col">Update</th>
                                        <th scope="col">Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var pet in Model)
                                        {
                                            <tr>
                                                <td>@pet.PetCatagory</td>
                                                <td>@pet.PetAge</td>
                                                <td>@pet.Description</td>
                                                <td>@pet.Phone</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(pet.ImagePath))
                                                    {
                                                        <img src="@pet.ImagePath" width="100px" alt="Pet Image" />
                                                    }
                                                    else
                                                    {
                                                        <span>No Image</span>
                                                    }
                                                </td>

                                                <td>
                                                    <a class="btn btn-primary" asp-controller="Pets" asp-action="Edit" asp-route-id="@pet.Id"><i class="fa-solid fa-pen-to-square me-2"></i>Edit</a>
                                                </td>

                                                <td>
                                                    <!-- Delete Button with confirmation -->
                                                    <form asp-action="Delete" asp-controller="Pets" method="post" onsubmit="return confirmDelete(event)">
                                                        <input type="hidden" name="id" value="@pet.Id" />
                                                        <button type="submit" class="btn btn-danger">
                                                            <i class="fa-solid fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center">Sorry!! You haven't uploaded anything :(</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </main>

    <script>
        // Confirm delete action
        function confirmDelete(event) {
            
            var result = confirm("Are you sure you want to delete this pet?");
            if (!result) {
                event.preventDefault();
            }
        }
    </script>
</body>

